<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  
<mapper namespace="edu.eci.pdsw.persistence.impl.mappers.PacienteMapper">
    

        
    <select parameterType="map" id="loadPacienteByID" resultMap="PacienteResult">

    </select> 
    <insert id="insertPaciente">
	INSERT into CM_PACIENTES (id,tipoId,nombre, fechaNacimiento,epsNit) values (#{id},#{tipoId},#{nombre}, #{fechaNacimiento}, #{epsNit})
    </insert>
    <insert id ="insertConsulta" useGeneratedKeys="true" keyProperty="con.id">
        insert into CM_CONSULTAS (con,idp,tipoidp, costoc) vaulues (#{con},#{idp},#{tipoidp},#{costoc})
    </insert>
    <insert id="registrarNuevoPaciente">
        SqlSessionFactory sessionfact = getSqlSessionFactory();
        SqlSession sqlss = sessionfact.openSession();
        PacienteMapper pmapper=sqlss.getMapper(PacienteMapper.class);

        insertarPaciente();
        //realizar las operaciones
        //...

        //hacer commit
        sqlSession.commit();	
        
        
    </insert>
    
    <select parameterType="map" id="loadPacientes" resultMap="PacienteResult">
        select
    p.id ,
    p.tipo_id ,
    p.nombre ,
    p.fecha_nacimiento ,
    e.nombre as detalle_nombre,
    e.nit as detalle_nit,
    c.idCONSULTAS as idCONSULTAS, 
    c.fecha_y_hora as fecha_y_hora,
    c.resumen as resumen,
    c.costo as costo FROM  CM_PACIENTES as p left join CM_CONSULTAS as c on p.id=c.PACIENTES_id left join CM_EPS as e on p.eps_nit=e.nit where p.id=12313
    </select>

    <resultMap type='Paciente' id='PacienteResult'>
            <id property='id' column='id'/>
            <id property='tipoId' column='tipo_id'/>
            <result property='nombre' column='nombre'/>  
            <result property='fechaNacimiento' column='fecha_nacimiento'/>
                         
            <association property="id" javaType="Eps"></association>     
            <collection property='id' ofType='Consulta' columnPrefix='detalle_'></collection>
                 
    </resultMap>
    <resultMap type='Eps' id='IdEps'>
        <id property='nit' column='propiedad6'/>
        <result property='nombre' column='propiedad5'/>
    </resultMap> 
        
    <resultMap type='Consulta' id='IdConsulta'>
        <id property='id' column='id'/>
        <result property='fechayHora' column='idCONSULTAS'/>
        <result property='resumen' column='nombre'/> 
        <result property='costo' column='fecha_y_hora'/>      	    
    </resultMap>
    
  



                
</mapper>
